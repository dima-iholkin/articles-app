@page
@model DeletePersonalDataModel
@inject ArticlesApp.WebAPI._AppConfiguration.AppConfiguration AppConfiguration

@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}



<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>
            Deleting this data will permanently remove your account.
        </strong>
    </p>
    <p>
        You will have @AppConfiguration.UserAccounts.SoftDeletionPeriodDays days to recover your account and data.
        <br />
        To recover your account: log-in again and follow the procedure.
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input!.Password"></label>
                <input asp-for="Input!.Password" class="form-control" />
                <span asp-validation-for="Input!.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Delete my data and my account</button>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}